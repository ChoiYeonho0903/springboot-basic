<configuration>
    <property name="ROLLING_FILE_LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

    <timestamp key="byDay" datePattern="yyyyMMdd" />

    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>${ROLLING_FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- define individual log level -->
    <logger name="org.programmers.kdt" level="info"/>

    <!-- default root log level -->
    <root level="warn">
        <appender-ref ref="ROLLING_FILE" />
    </root>
</configuration>