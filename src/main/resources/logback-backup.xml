<configuration>

    <conversionRule
            conversionWord="clr"
            converterClass="org.springframework.boot.logging.logback.ColorConverter"/>

    <property name="CONSOLE_LOG_PATTERN"
              value="%clr(%d{HH:mm:ss.SSS}){yellow} [%thread] %clr(%-5level) %logger{36} - %msg%n"/>
    <property name="FILE_LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Console Log -->
    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>
    <appender name="STDOUT_COMMAND" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="warn">
        <appender-ref ref="STDOUT_COMMAND"/>
    </root>

    <!-- File Log -->
    <appender name="ROLLING_FILE_COMMAND" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/access.log</file>
        <append>false</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                logs/access-%d{yyyy-MM-dd}.log
            </fileNamePattern>
        </rollingPolicy>

        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <logger name="org.prgrms.kdt.CommandLineApplication" level="debug">
        <appender-ref ref="ROLLING_FILE_COMMAND"/>
    </logger>


    <logger name="org.prgrms.kdt.KdtSpringOrderApplication" level="debug">
        <appender-ref ref="ROLLING_FILE_COMMAND"/>
    </logger>

</configuration>